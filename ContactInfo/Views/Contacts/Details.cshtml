@model ContactInfo.Models.Contact

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.FirstName @Model.LastName</h2>

<table>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone Number:</th>
        <td>@Model.PhoneNumber</td>
    </tr>
    @if (!string.IsNullOrWhiteSpace(Model.Address))
    {
        <tr>
            <th>Address:</th>
            <td>@Model.Address</td>
        </tr>
    }
    @if (!string.IsNullOrWhiteSpace(Model.City))
    {
        <tr>
            <th>City:</th>
            <td>@Model.City</td>
        </tr>
    }
    @if (!string.IsNullOrWhiteSpace(Model.State))
    {
        <tr>
            <th>State:</th>
            <td>@Model.State</td>
        </tr>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Country))
    {
        <tr>
            <th>Country:</th>
            <td>@Model.Country</td>
        </tr>
    }
    @if (!string.IsNullOrWhiteSpace(Model.PostCode))
    {
        <tr>
            <th>Post Code:</th>
            <td>@Model.PostCode</td>
        </tr>
    }
    <tr>
        <th>Status:</th>
        <td>@Model.Status</td>
    </tr>
</table>

<br/>

<p>
    @Html.ActionLink("Edit", "Edit", "Contacts", new { id = Model.Id }, null) |
    @Html.ActionLink("Back to Contacts", "Index", "Contacts")
</p>

<style type="text/css">
    th {
        width: 150px;
    }
</style>